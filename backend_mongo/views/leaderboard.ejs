<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LEADERBOARD</title>
    <link rel="stylesheet" href="/css/navbar.css">
    <link rel="stylesheet" href="/css/leaderboard.css">
    <link href="https://fonts.googleapis.com/css2?family=Freckle+Face&display=swap" rel="stylesheet">
</head>
<body>

    <%- include('partials/navbar') %>

    <div class="leaderboard-container">

        <div class="leaderboard-header">
            <span class="leaderboard-title">QUIZ - IT</span>
        </div>

        <div class="leaderboard-main-title">LEADERBOARD</div>

        <div class="leaderboard-content-flex">

            <div class="leaderboard-img-block">
                <img src="/img/leaderboy.png" class="leaderboard-img">
            </div>

            <div class="leaderboard-list-block">

                <!-- GRID HEADER -->
                <div class="leaderboard-grid-header">
                    <div>NAME</div>
                    <div>REGION</div>
                    <div>NO. OF QUIZ</div>
                    <div>SCORE</div>
                    <div>CATEGORY</div>
                </div>

                <!-- LEADERBOARD SCROLL LIST -->
                <div class="leaderboard-scroll-list" id="leaderboardRows">
                    <!-- rows added dynamically by leaderboard.js -->
                </div>

                <div class="leaderboard-actions">
                    <button class="leaderboard-home-btn" onclick="window.location.href='/'">Home</button>
                </div>

            </div>
        </div>

        <footer class="leaderboard-footer">
            <span class="footer-title">QUIZ IT :</span> ALL RIGHTS RESERVED
        </footer>

    </div>

    <%- include('partials/footer') %>

    <script src="/js/leaderboard.js"></script>

</body>
</html>
